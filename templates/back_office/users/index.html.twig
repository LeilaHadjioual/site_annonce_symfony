{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <div class="container mt-4">
    <h1 style="margin-top: 2em">Liste des utilisateurs</h1>
        <table class="table table-striped table-hover" >
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
{#                <th class="col-md-4">Password</th>#}
                <th>Téléphone</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
{#                    <td>{{ user.password }}</td>#}
                    <td>{{ user.phone }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('users_show', {'id': user.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('users_edit', {'id': user.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('users_new') }}">Créer un utilisateur</a>
    </div>
{% endblock %}
