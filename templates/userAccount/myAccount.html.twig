{% extends 'base.html.twig' %}

{% block title %}Mon compte {% endblock %}

{% block body %}
    <div class="container mt-4 formContrainer">
        <h1 class="h1Style">Mon compte</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="profile">
            <div class="profileMarg">
                <img class="profileImg" src="/images/site/userAccount.png" alt="image2"/>
            </div>
            <div class="row" style="padding-top: 2em">
                <div class="col">
                    <span>{{ user.firstname }}</span>
                </div>
                <div class="col">
                    <span>{{ user.lastname }}</span>
                </div>
            </div>
            <div class="row" style="padding-top: 2em">
                <div class="col">
                    <span>{{ user.email }}</span>
                </div>
                <div class="col">
                    <span>{{ user.phone }}</span>
                </div>
            </div>
        </div>
        <div class="text-right mt-2">
            <a class="btn btnEdit" href="{{ path('account_edit',{id: user.id}) }}">Modifier</a>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script>
        $(document).ready(function(){
            setTimeout(function(){ $('.alert-success').fadeOut() }, 3000);
        });
    </script>
{% endblock %}

