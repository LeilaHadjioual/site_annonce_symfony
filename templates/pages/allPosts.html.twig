{#{% extends 'base.html.twig' %}#}

{% block body %}
    <div class="mt-4">
        <div class="homePres">
            <h1 class="homeTxt">Bienvenue sur votre site gratuit d'annonce et d'entraide en ligne</h1>
            <div class="container h-100">
                <div class="d-flex justify-content-center h-100">
                    <div class="searchbar">
                        <input class="search_input" type="text" name="" placeholder="Rechercher...">
                        <a href="#" class="search_icon"><i class="fa fa-search"></i></a>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="container" id="containerAllPost">
            <div class="column flex">
                {% for post in posts %}
                    {% include 'components/card.html.twig' %}
                {% endfor %}
            </div>
        </div>
        <div class="pagination">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}