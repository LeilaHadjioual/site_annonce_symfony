{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="h1Style">Liste des membres</h1>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone }}</td>
                    <td>
                        <a class="btn btnShow" href="{{ path('users_show', {'id': user.id}) }}"><i class="fa fa-info"></i></a>
                        <a class="btn btnEdit" href="{{ path('users_edit', {'id': user.id}) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">aucun membre enregistré</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a class="btn btnCreate" href="{{ path('users_new') }}">Créer un utilisateur</a>
        </div>
        <div class="pagination">
            {{ knp_pagination_render(users) }}
        </div>
    </div>
{% endblock %}
